<h1>Listagem de Ítens</h1>

<table>
  <thead>
    <tr>
      <th>Productos</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product %></td>
        <td><%= line_item.cart %></td>
        <td><%= link_to 'Detalhes', line_item %></td>
        <td><%= link_to 'Editar', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Excluir', line_item, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo ítem', new_line_item_path %>
