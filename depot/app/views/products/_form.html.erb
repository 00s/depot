<%= form_for(@product, :url=>{:action=>'create'}, :html=>{:multipart=>true}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo%><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :descrição %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>
  
  <div class="field">
      <%= f.label :imagem %><br>
      <%= f.file_field :image_file %>
      <%= f.hidden_field :image_url, :value => :image_url %>

  </div>

  <div class="field">
    <%= f.label :preço %><br>
    <%= f.text_field :price %>
  </div>
  
  <div class="actions">
   <%= f.submit "Adicionar Produto" %>
  </div>
<% end %>
