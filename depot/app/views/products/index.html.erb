<h1>BOEKEN</h1>

<div id="products-holder">
<% @products.each do |product| %>

  <div class="list-line-holder">

    <div class ="image-holder">
      <%= link_to(image_tag(product.image_url, class: 'list_image'), product) %>
    </div>
    
    <div class="list-actions">
      <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-primary btn-xs"%>
      <%= link_to 'Destroy', product, :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Tem certeza que deseja excluir?'} %>
    </div>
  
  </div>
<% end %>
</div>
<br />

<%= button_to 'Novo Produto', new_product_path, :method => :get, :class => "btn btn-info"%>
