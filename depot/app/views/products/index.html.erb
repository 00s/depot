<h1>Listing products</h1>

<table>
<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.title %></dt>
        <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= button_to 'Show', product, :method => :get %>
      <%= button_to 'Edit', edit_product_path(product), :method => :get %>
      <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :method => :get %>
    </td>
  </tr>
<% end %>
</table>
<br />

<%= button_to 'New Product', new_product_path, :method => :get %>
