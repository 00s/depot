<div>
	<% if notice %>
		<p id="notice" class="alert alert-danger"><%= notice %></p>
	<% end %>
	
</div>



<div id="cart">
	<h2>Your Cart</h2>
 
<div class="container-fluid">
<table  id="table" class="table table-bordered table-hover">
  <thead>
	  	<th>Title</th>
	  	<th>Price</th>
	  	<th>Quantity</th>
	  	<th>Total</th>
	  	<th>
		  <%= button_to @cart, {remote: true, method: :delete, data: {message: 'EstÃ¡ certo que deseja esvaziar seu carrinho?' } , class: "btn btn-lg"} do %>
		  <i class="glyphicon glyphicon-remove"></i>
		  	<% end %>
	  	</th>
	</thead>
			<%= render @cart.line_items %>
 		<tr class="total_line">
		<th id='total'>Total</th>
		<th></th>
		<th><%= @cart.total_quantity %></th>
		<th></th>
		<th class="total_cell"><%= number_to_currency(@cart.total_price) %></th>
  </tr>
  </table>
</div>

</div> 